source 'https://rubygems.org'
ruby '2.2.3'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.5'
gem 'pg'

# Assets
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'

# Authentication & authorization
gem 'devise', github: 'plataformatec/devise', branch: 'master'

# API Stuff
gem 'jbuilder'

# client
gem 'rest-client'

# Redis
gem 'redis'

# Background jobs
gem 'sidekiq'
gem 'sidekiq-status'
gem 'sidekiq-limit_fetch'
gem 'sinatra', require: false

# Server stuff
gem 'foreman'

# Enviroment variables
gem 'dotenv-rails'

group :production do
  gem 'rails_12factor'
end

group :development do
  gem 'pry-rails'
  gem 'letter_opener'
end

